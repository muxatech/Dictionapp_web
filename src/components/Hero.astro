---
import backgroundSvg from '../assets/background.svg';
import logoImage from '../assets/logo.png';
import appScreenshot1 from '../assets/screenshot1.png';
import appScreenshot2 from '../assets/screenshot2.png';
---

<div
  class="relative min-h-screen overflow-hidden"
  
>
  <!-- Navigation -->
  <nav class="container mx-auto px-6 py-6">
    <div class="flex items-center gap-3">
      <img src={logoImage.src} alt="Dictionapp Logo" class="h-12 w-12 object-contain rounded -xl" />
      <span class="text-2xl font-bold" style="color: #0C2F39;">
        Dictionapp
      </span>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mx-auto px-6 py-12 md:py-20">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left Column - Text Content -->
      <div class="space-y-8">
        <div class="space-y-4">
          <h1
            class="text-5xl md:text-6xl lg:text-7xl leading-tight"
            style="color: #0C2F39; font-weight: 800;"
          >
            Tu vocabulario,{" "}
            <span style="color: #1E758D;">a otro nivel</span>
          </h1>
          <p
            class="text-xl md:text-2xl"
            style="color: #155263; font-weight: 500;"
          >
            Descubre el futuro est√°ndar del aprendizaje de vocabulario.
          </p>
        </div>

        <!-- Download Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="<https://play.google.com/store>"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center gap-2 px-8 py-6 text-lg rounded-lg transition-colors hover:opacity-90"
            style="background-color: #FFC93C; color: #0C2F39; font-weight: 700;"
          >
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <rect width="14" height="20" x="5" y="2" rx="2" ry="2"></rect>
              <path d="M12 18h.01"></path>
            </svg>
            Descargar en Google Play
          </a>

          <div class="relative inline-block w-full sm:w-auto">
            <button
              disabled
              class="w-full sm:w-auto inline-flex items-center justify-center gap-2 px-8 py-6 text-lg rounded-lg opacity-60 cursor-not-allowed"
              style="background-color: #155263; color: #FFD76F; font-weight: 700;"
            >
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"></path>
              </svg>
              Descargar en App Store
            </button>
            <span
              class="absolute -top-2 -right-2 px-3 py-1 rounded-full text-xs"
              style="background-color: #FFBB09; color: #0C2F39; font-weight: 600;"
            >
              Coming Soon
            </span>
          </div>
        </div>

        <!-- Footer Text -->
        <div class="pt-8">
          <p
            class="text-sm"
            style="color: #155263; font-weight: 500;"
          >
            Powered by <span style="font-weight: 700;">Studio Muxa Tech, S.L.</span>
          </p>
        </div>
      </div>

      <!-- Right Column - App Screenshots -->
      <div class="relative flex items-center justify-center gap-6">
        <!-- Screenshot 1 -->
        <div
          class="relative z-10 transform hover:scale-105 transition-transform duration-300 w-auto max-w-[250px]"
          style="filter: drop-shadow(0 25px 50px rgba(12, 47, 57, 0.25));"
        >
          <img
            src={appScreenshot1.src}
            alt="Dictionapp Screenshot 1"
            class="w-full h-auto max-h-[500px] object-contain rounded-3xl"
          />
        </div>

        <!-- Screenshot 2 -->
        <div
          class="relative transform hover:scale-105 transition-transform duration-300 w-auto max-w-[250px]"
          style="filter: drop-shadow(0 25px 50px rgba(12, 47, 57, 0.25)); margin-top: 60px;"
        >
          <img
            src={appScreenshot2.src}
            alt="Dictionapp Screenshot 2"
            class="w-full h-auto max-h-[500px] object-contain rounded-3xl"
          />
        </div>

        <!-- Decorative Element -->
        <div
          class="absolute -z-10 w-96 h-96 rounded-full blur-3xl opacity-30"
          style="background-color: #FFC93C; top: 50%; left: 50%; transform: translate(-50%, -50%);"
        />
      </div>
    </div>
  </div>

  <!-- Decorative Bottom Accent -->
  <div
    class="absolute bottom-0 left-0 right-0 h-2"
    style="background: linear-gradient(90deg, #155263 0%, #1E758D 25%, #FFC93C 50%, #FFBB09 75%, #FFD76F 100%);"
  />
</div>
